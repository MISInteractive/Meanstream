<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <title></title>
    <link href="/css/app.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    <script src="/scripts/holder.js"></script>
    <script src="/scripts/jquery.js"></script>
    <script src="/scripts/dust.js"></script>
    <script src="/scripts/templates.js"></script>
    <script src="/scripts/ellipsis.js"></script>
    <script src="/scripts/app.js"></script>
</head>
<body>
    <div data-role="container" class="ui-sticky-footer">
        <div class="ui-navbar" data-ui="navbar">
            <div class="ui-topbar">
                <ul class="ui-social left">
                    <li><a class="facebook" href="#" target="_blank"></a></li>
                    <li><a class="pinterest larger" href="#" target="_blank"></a></li>
                </ul>
                <ul class="right">
                    <li class="ui-flex-container start">
                        <input class="ci-search" type="text" placeholder="Search" data-role="search" id="search-textbox">
                        <span class="btn-submit" id="search-submit"></span>
                    </li>
                </ul>
            </div>
            @{Html.RenderAction("Menu", "Gallery");}
        </div>
        @RenderBody()
        <footer data-role="footer">
            <div class="row">
                <div class="columns default-12">
                    <hr>
                    <div class="ui-flex-container">
                        <ul class="ui-menu">
                            <li><a href="/contact">Contact</a></li>
                            <li><a href="/about">About</a></li>
                            <li><a href="/press">Press</a></li>
                            <li><a href="/custom">Custom</a></li>
                            <li><a href="/privacy-policy">Privacy Policy</a></li>
                        </ul>
                    </div>
                    <div class="ui-flex-container copyright">
                        <span>
                            Copyright @DateTime.Now.Year
                        </span>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jquery.hcaptions")
    @Scripts.Render("~/bundles/jquery.remodal")
    

    <script language="javascript">
        $(document).ready(function () {
            $('.hcaption').hcaptions({
                effect: "fade",
                zindex: 100000
            });
        });
    </script>
</body>
</html>

