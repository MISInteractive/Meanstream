@model Portal.Models.PortalPageViewModel
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Keywords = Model.MetaKeywords;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Id = Model.Id.ToString();
}

<section class="outer">
    <div class="row">
        <div class="columns default-12 tablet-12 desktop-6" data-portal-content-pane="left-content">
            @{Html.RenderPartial("~/Controls/Portals/0/Skins/_WidgetZone.cshtml", Model, new ViewDataDictionary() { { "Zone", "left-content" } });}
        </div>
        <div class="columns default-12 tablet-12 desktop-6">
            <article>
                @if (Model.Name != "Custom")
                {
                    <h1>@Model.Name</h1>
                }
                <span data-portal-content-pane="right-content">
                    @{Html.RenderPartial("~/Controls/Portals/0/Skins/_WidgetZone.cshtml", Model, new ViewDataDictionary() { { "Zone", "right-content" } });}
                </span>
            </article>
        </div>
    </div>
</section>