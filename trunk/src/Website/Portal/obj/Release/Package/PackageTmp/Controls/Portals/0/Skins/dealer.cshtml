@model Portal.Models.PortalPageViewModel
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Keywords = Model.MetaKeywords;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Id = Model.Id.ToString();
}

<section class="outer">
    <div class="row">
        <div class="columns default-12">
            <div class="ui-flex-container">
                <div class="ui-flex-container right top absolute margin-top"><h1>@Model.Name</h1></div>
                <div class="image-border" data-portal-content-pane="header-content">
                    @{Html.RenderPartial("~/Controls/Portals/0/Skins/_WidgetZone.cshtml", Model, new ViewDataDictionary() { { "Zone", "header-content" } });}
                </div>
            </div>
        </div>
    </div>
    @Html.Action("SalesReps", "WhereToBuy")
</section>