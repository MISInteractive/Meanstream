<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <title></title>
    <link href="/css/app.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    <script src="/scripts/holder.js"></script>
    <script src="/scripts/jquery.js"></script>
    <script src="/scripts/dust.js"></script>
    <script src="/scripts/templates.js"></script>
    <script src="/scripts/ellipsis.js"></script>
    <script src="/scripts/app.js"></script>
</head>
<body>
    <div data-role="container" class="ui-sticky-footer">
        <div class="ui-navbar" data-ui="navbar">
            <div class="ui-topbar">
                <ul class="ui-social left">
                    <li><a class="facebook" href="https://www.facebook.com/SomersetBay" target="_blank"></a></li>
                    <li><a class="pinterest larger" href="http://www.pinterest.com/somersetbay/" target="_blank"></a></li>
                </ul>
                <ul class="right">
                    <li class="ui-flex-container start">
                        <input class="ci-search" type="text" placeholder="Search" data-role="search" id="search-textbox">
                        <span class="btn-submit" id="search-submit"></span>
                    </li>
                </ul>
            </div>
            @{Html.RenderAction("Menu", "Gallery");}
        </div>
        @RenderBody()
        <footer data-role="footer">
            <div class="row">
                <div class="columns default-12">
                    <hr>
                    <div class="ui-flex-container">
                        <ul class="ui-menu">
                            <li><a href="/contact">Contact</a></li>
                            <li><a href="/about">About</a></li>
                            <li><a href="/press">Press</a></li>
                            <li><a href="http://www.modernhistoryhome.com" target="_blank">Modern History</a></li>
                            <li><a href="/custom">Custom</a></li>
                            <li><a href="/privacy-policy">Privacy Policy</a></li>
                        </ul>
                    </div>
                    <div class="ui-flex-container copyright">
                        <span>
                            Copyright @DateTime.Now.Year Somerset Bay Home | <a href="http://misinteractive.com" target="_blank">Credits</a>
                        </span>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jquery.hcaptions")
    @Scripts.Render("~/bundles/jquery.remodal")
    

    <script language="javascript">
        $(document).ready(function () {
            $('.hcaption').hcaptions({
                effect: "fade",
                zindex: 100000
            });

            $('.logo').click(function () {
                window.location.href = '/';
            });

            $('#search-submit').click(function () {
                var txt = $('#search-textbox').val();
                if (txt == '')
                    return;
                window.location.href = '/search?q=' + txt;
            });
        });
    </script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-31335-14', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>

